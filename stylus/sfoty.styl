gris_oscuro = #333333
gris_claro = #818181
rojo = #bd255b
gris_mas_claro = #f0f0f0
img
	vertical-align top 
a
	text-decoration none
//buttons
.btn_menu
	color gris_oscuro
	left .5em
	margin-top -10px
	position absolute
	top 50%
//ocss clases
.wrap
	width 1000px
.round 
	border-radius 50%
	overflow hidden
.relative
	position relative
.center-block
	margin 0 auto 
.center-text
	text-align center
.padding
	padding 1em
	
.gray 
	color gris_claro
	
.border-bottom
	border-bottom 1px solid gris_claro
.padding-tb
	padding 1em 0
	
.left
	float left
.right
	float right
	
body
	font-family 'Varela Round'
	font-size 16px
figure
	margin 0
header 
	border-bottom 1px solid gris_claro
	height 3.5em
	.title
		font-size 1.1em
		line-height 3.5em
		margin 0
		text-align center
.menu
	display none
.container
	font-size 0
	padding 1.4rem
	text-align center
.name
	color gris_oscuro
.autor
	color gris_claro
.song
	color gris_claro
	display inline-block
	font-size 1rem
	margin-bottom 1em
	margin-right 1em
	text-align left
	width 8rem
	&:nth-child(even)
		margin-right 0
	p 
		margin 0.5em 0
		
.playing
	&.small
		width 20em
		margin 0 auto
.actions
	background rgba(black, .3)
	bottom 0
	left 0
	padding 1em
	position absolute
	right 0
	text-align right
	.action 
		color white
		font-size 1.2em
		margin-right .5em
		&:last-child
			margin-right 0
	
.progres
	margin 1.5em 0
	position relative
	.min 
	.max
		font-size 0.8em
		position absolute
		top -5px
	.min
		left 0
	.max
		right 0
	.total
		background gris_claro
		border-radius 5px
		height 5px
		margin 0 auto 
		width 75%
		.state
			background rojo
			border-radius 5px
			height 5px
			position relative
			width 33%
			animation 20s state infinite linear
			.circle
				background gris_oscuro
				border-radius 50%
				height 12px
				position absolute
				right 0
				top -3px
				width 12px
				animation 1.5s circle infinite
@keyframes circle
	0%
		transform scale(1)
	50%
		transform scale(1.5)
	100%
		transform scale(1)
@keyframes state
	from 
		width 0%
	to 
		width 100%				
.play
	.action
		margin-right 1em
		&:last-child
			margin-right 0	
.input
	height 2.5em
	border 1px solid gris_claro
	padding 0 1em 0 2em
	border-radius 5px
	margin-right .5em
	color gris_oscuro			
.search-icon
	color gris_claro
	left .5em
	position absolute
	top .7em
	border-right 1px solid gris_claro
	padding-right 0.2em
	height 1.3em
.icon-close
	position absolute
	top .4em
	right .8em
	color gris_claro
	font-size 1.2em
ul 
	margin 0
	padding 0
.playlist
	display none


.playlist
	display none
	padding 0 2em
	width 22em
	border-left 1px solid gris_claro
	.list
		list-style none
		.item
			padding 1em 0
			.action
				font-size 0.9em
.logo
	background white
	display none
	overflow hidden	
	padding 1em 0
	.isotipo
		width 122px
	.avatar
		width 38px
		height 38px
	.username
		color gris_claro
		top 9px
		margin-left .5em
		&:after
			border-left 7px solid transparent
			border-right 7px solid transparent
			border-top 9px solid gris_claro
			content ""
			display inline-block 
			margin-left .4em

@media screen and (min-width:480px)
	.song
		&:nth-child(even)
			margin-right 1em
	.image
		img 
			width 100%
			height auto		
	.playing
		&.medium
			width auto
	
@media screen and (min-width:1000px)
	body
		background gris_mas_claro
	.btn_menu
		display none
	.music
		float left
		width 32.5em
		.description 
			display none
			
	.playlist
	.logo
		display block
	
				
	.playing
		padding-top 1.3em
		&.large
			margin 0 auto
			width 62.5em
			overflow hidden
	header
		height auto 
		border none
		.title
			display none
	.menu
		display block 
		overflow hidden
		border-top 1px solid gris_claro
		.item
			float left 
			list-style none
			text-transform uppercase
			a
				padding 1em
				display block 
				color gris_oscuro
				border-top 5px solid transparent
				&:hover
					border-top 5px solid gris_claro
	
			








	