@import "normaliz.styl"

gris_oscuro = #333333
gris_claro = #818181
a
	text-decoration none
//buttons
.btn_menu
	position absolute
	top 50%
	margin-top -10px
//ocss clases
.relative
	position relative
	
body
	font-size 16px
	font-family 'Varela Round'
figure
	margin 0
header 
	height 3.5em
	border-bottom 1px solid gris_claro
	.title
		font-size 1.1em
		text-align center
		margin 0
		line-height 3.5em
.menu
	display none
.container
	padding 1.4rem
	font-size 0
	text-align center
.name
	color gris_oscuro
.song
	width 8rem
	display inline-block
	font-size 1rem
	color gris_claro
	margin-right 1em
	margin-bottom 1em
	text-align left
	&:nth-child(even)
		margin-right 0
	p 
		margin 0.5em 0
	